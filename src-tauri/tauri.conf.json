{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Jimini",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "scope": ["$APPCONFIG/*", "$APPDATA/**/*"],
        "readFile": true,
        "writeFile": true
      },
      "dialog": {
        "all": false,
        "save": true
      }
    },
    "cli": {
      "description": "Jimini",
      "longDescription": "A Gemini Browser",
      "beforeHelp": "",
      "afterHelp": "",
      "args": [
        {
          "name": "url",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "windows": [
      {
        "title": "Jimini",
        "width": 800,
        "height": 800,
        "minWidth": 400,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "psobolik_jimini",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
